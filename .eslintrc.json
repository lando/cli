{
  "env": {
    "node": true,
    "mocha": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "sourceType": "script",
    "ecmaVersion": 8,
    "requireConfigFile": false
  },
  "extends": "google",
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "max-len": ["error", {
      "code": 150,
      "ignoreComments": true
    }],
    "no-extra-semi": ["error"],
    "require-jsdoc": ["error", {
      "require": {
        "FunctionDeclaration": true,
        "MethodDefinition": false,
        "ClassDeclaration": false,
        "ArrowFunctionExpression": false,
        "FunctionExpression": false
      }
    }],
    "strict": ["error", "global"]
  }
}
